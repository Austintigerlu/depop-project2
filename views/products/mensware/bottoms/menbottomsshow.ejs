<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../../partials/head.ejs') %>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="<%=Product.image%>">
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <h1><%=Product.name%></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <span class="label label-primary"><%=Product.condition%></span>
                        <span class="monospaced">No. <%=Product._id%></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p class="description"><%=Product.description%></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../../partials/footer.ejs') %>
</body>
</html>