<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/showPage.css">
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img class="productImage" src="<%=Product.image%>">
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <h1><%=Product.name%></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <span class="label label-primary">Condition: <%=Product.condition%></span>
                        <!-- <span class="monospaced">No. <%=Product._id%></span> -->
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p class="description">Description: <%=Product.description%></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 bottom-rule">
                        <h2 class="product-price">$<%=Product.price%></h2>
                    </div>
                </div>
                <% if (user) {%>
                <div class="row">
                    <div class="col-md-12">
                        <form action="/products/<%=Product._id%>/edit">
                            <input type="submit" value="Edit" class="btn btn-secondary">
                        </form>
                        <br>
                        <form action="/products/<%=Product._id%>?_method=DELETE" method="POST">
                            <input type="submit" value="Delete Item" class="btn btn-secondary">
                        </form>
                        <br>
                        <a href="/cart" target="_blank" class="btn btn-secondary">Add to Cart &raquo;</a>
                    </div>
                </div>
                <%}%>
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>
</body>
</html>